using System;
using System.Globalization;

namespace qwerty
{
    class Program
    {
        static void Main(string[] args)
        {
            int firstDigit = 0, secondDigit = 0;
            float mean = 0;
            bool isInt = false;

            Console.Write("Введите первое число: ");
            CheckInt(ref firstDigit);
            Console.Write("Введите второе число: ");
            CheckInt(ref secondDigit);
            mean = FindMean(ref firstDigit, ref secondDigit, ref mean);

            Console.WriteLine($"\nИх среднее арифметическое: {mean}");
            Console.ReadKey();
        }
        
        static void CheckInt(ref int digit)
        {
            bool isDigit;

            isDigit = int.TryParse(Console.ReadLine(), out digit);

            while (!isDigit)
            {
                Console.Write("Введите корректное число: ");
                isDigit = int.TryParse(Console.ReadLine(), out digit);
            }
        }
        
        static float FindMean(ref int firstDigit, ref int secondDigit, ref float mean)
        {
            mean = ((float)firstDigit + secondDigit) / 2;
            return mean;
        }
    }
}
